{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://edith-mission-control.dev/schemas/workflow.json",
  "title": "Workflow",
  "description": "A multi-stage workflow in the Mission Control system",
  "type": "object",
  "required": ["id", "name", "stages", "created_by", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^workflow-[a-z0-9-]+$",
      "description": "Unique workflow identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Workflow name"
    },
    "description": {
      "type": "string",
      "description": "Workflow description"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "paused", "completed", "cancelled"],
      "default": "draft",
      "description": "Workflow status"
    },
    "current_stage": {
      "type": ["string", "null"],
      "description": "ID of current active stage"
    },
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/stage"
      },
      "description": "Workflow stages in order"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^task-[a-z0-9-]+$"
      },
      "description": "IDs of tasks in this workflow"
    },
    "created_by": {
      "type": "string",
      "pattern": "^(agent-|human-)[a-z0-9-]+$",
      "description": "Creator ID"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Completion timestamp"
    },
    "metadata": {
      "type": "object",
      "description": "Additional workflow metadata"
    }
  },
  "$defs": {
    "stage": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "skipped"],
          "default": "pending"
        },
        "tasks_template": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Task types to create for this stage"
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^task-[a-z0-9-]+$"
          },
          "description": "Actual task IDs in this stage"
        },
        "required_approval": {
          "type": "boolean",
          "default": false,
          "description": "Requires approval to proceed"
        },
        "approver": {
          "type": ["string", "null"],
          "pattern": "^(agent-|human-)[a-z0-9-]+$",
          "description": "Required approver ID"
        },
        "started_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "completed_at": {
          "type": ["string", "null"],
          "format": "date-time"
        }
      }
    }
  }
}
