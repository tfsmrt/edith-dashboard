{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jarvis-mission-control.dev/schemas/agent.json",
  "title": "Agent",
  "description": "An agent (AI or human) in the Mission Control system",
  "type": "object",
  "required": ["id", "name", "type", "role", "status", "registered_at"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^(agent-|human-)[a-z0-9-]+$",
      "description": "Unique agent identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Display name for the agent"
    },
    "type": {
      "type": "string",
      "enum": ["ai", "human", "hybrid"],
      "description": "Agent type"
    },
    "role": {
      "type": "string",
      "enum": ["lead", "specialist", "reviewer", "observer"],
      "description": "Agent role determining permissions"
    },
    "model": {
      "type": ["string", "null"],
      "description": "AI model identifier (for AI agents)"
    },
    "status": {
      "type": "string",
      "enum": ["active", "idle", "busy", "offline", "suspended"],
      "description": "Current agent status"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "List of agent capabilities/skills"
    },
    "registered_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 registration timestamp"
    },
    "last_active": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 last activity timestamp"
    },
    "current_tasks": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^task-[a-z0-9-]+$"
      },
      "description": "IDs of tasks currently assigned"
    },
    "completed_tasks": {
      "type": "integer",
      "minimum": 0,
      "description": "Count of completed tasks"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Agent description/purpose"
        },
        "owner": {
          "type": "string",
          "description": "Human owner/supervisor ID"
        },
        "session_id": {
          "type": ["string", "null"],
          "description": "OpenClaw session identifier"
        },
        "contact": {
          "type": ["string", "null"],
          "description": "Contact information"
        },
        "avatar": {
          "type": ["string", "null"],
          "format": "uri",
          "description": "Avatar image URL"
        }
      },
      "description": "Additional agent metadata"
    },
    "config": {
      "type": "object",
      "properties": {
        "auto_claim": {
          "type": "boolean",
          "description": "Auto-claim matching tasks"
        },
        "max_concurrent_tasks": {
          "type": "integer",
          "minimum": 1,
          "description": "Max simultaneous tasks"
        },
        "preferred_labels": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Preferred task labels"
        },
        "working_hours": {
          "type": "object",
          "properties": {
            "start": {
              "type": "string",
              "pattern": "^[0-2][0-9]:[0-5][0-9]$"
            },
            "end": {
              "type": "string",
              "pattern": "^[0-2][0-9]:[0-5][0-9]$"
            },
            "timezone": {
              "type": "string"
            }
          }
        }
      },
      "description": "Agent-specific configuration"
    }
  }
}
